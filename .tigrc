set vertical-split = no
set main-view-date = custom
set main-view-date = relative
set main-view-author = full
set main-view-author-width = 20
set main-view-id = yes
set main-view-commit-title-graph = no
set ignore-case = smart-case

# https://kparal.wordpress.com/2020/12/16/show-a-side-by-side-git-diff-on-any-commit-in-tig-using-meld/
# use difftool to compare a commit in main/diff view with its parent
# https://github.com/jonas/tig/issues/219#issuecomment-406817763
bind main w !git difftool -d %(commit)^!
bind diff w !git difftool -d %(commit)^!


# Modified from https://gist.github.com/matsubo/8012c260f76f1dad3ad9
